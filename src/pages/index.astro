---
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = [
  {
    title: 'Fuel',
    desc: 'Calorie tracker with NLP food input, macro tracking, and barcode scanning. Built as a PWA, heading to the App Store.',
    tags: ['JavaScript', 'PWA', 'NLP', 'OpenFoodFacts API'],
    link: '/projects/fuel',
    github: 'https://github.com/quakeob/fuel-app',
    status: 'Live',
    emoji: 'üî•',
  },
  {
    title: 'Yerb',
    desc: 'Personal AI assistant running 24/7 on a Mac Mini. Manages calendar, automates coursework, runs autonomous builds overnight, and ghostwrites content.',
    tags: ['OpenClaw', 'Python', 'Anthropic', 'Automation'],
    link: '/projects/yerb',
    status: 'Active',
    emoji: 'ü§ñ',
  },
  {
    title: 'Marketplace Scraper',
    desc: 'Automated vehicle deal finder for Toyota Tacoma & 4Runner. Scrapes Craigslist, scores deals, alerts on finds.',
    tags: ['Python', 'SQLite', 'Web Scraping', 'Telegram'],
    link: '/projects/marketplace-scraper',
    status: 'Active',
    emoji: 'üîç',
  },
  {
    title: 'Neural Networks from Scratch',
    desc: 'Custom neural network library in Python ‚Äî backpropagation, multiple activation functions, convolutional layers ‚Äî no TensorFlow or PyTorch.',
    tags: ['Python', 'NumPy', 'Machine Learning'],
    link: '/projects/neural-networks',
    github: 'https://github.com/quakeob/neural-networks',
    status: 'In Progress',
    emoji: 'üß†',
  },
  {
    title: 'Vault Keeper',
    desc: 'AI-powered accountability system built on Obsidian. Reads your journals, detects patterns, and generates accountability briefs.',
    tags: ['Obsidian', 'Python', 'AI', 'PKM'],
    link: '/projects/vault-keeper',
    github: 'https://github.com/quakeob/ObsidianVaultkeeper',
    status: 'Legacy',
    emoji: 'üèõÔ∏è',
  },
  {
    title: 'Time Audit',
    desc: 'macOS screen time tracker ‚Äî logs active applications every 30s, generates daily usage reports. Runs as a background launchd service.',
    tags: ['Python', 'macOS', 'AppleScript', 'launchd'],
    link: '/projects/time-audit',
    status: 'Active',
    emoji: '‚è±Ô∏è',
  },
];

const skills = [
  { category: 'Languages', items: ['Python', 'JavaScript/TypeScript', 'HTML/CSS', 'SQL', 'AppleScript'] },
  { category: 'AI/ML', items: ['LLMs', 'Prompt Engineering', 'Neural Networks', 'NLP', 'Anthropic API'] },
  { category: 'Frameworks', items: ['Astro', 'React', 'Node.js', 'Tailwind', 'Flask'] },
  { category: 'Tools', items: ['Git', 'Docker', 'macOS Automation', 'Web Scraping', 'Obsidian'] },
  { category: 'Data', items: ['SQLite', 'PostgreSQL', 'REST APIs', 'Canvas API'] },
];
---

<BaseLayout>
  <!-- HERO ‚Äî All background canvases (only active one renders) -->
  <section class="min-h-screen flex items-center px-6 pt-20 relative overflow-hidden">
    <canvas id="neural-canvas" class="theme-canvas" data-for-theme="default"></canvas>
    <canvas id="bg-minimal-canvas" class="theme-canvas" data-for-theme="minimal"></canvas>
    <canvas id="bg-terminal-canvas" class="theme-canvas" data-for-theme="terminal"></canvas>
    <canvas id="bg-glass-canvas" class="theme-canvas" data-for-theme="glass"></canvas>
    <canvas id="bg-brutalist-canvas" class="theme-canvas" data-for-theme="brutalist"></canvas>
    <canvas id="bg-neon-canvas" class="theme-canvas" data-for-theme="neon"></canvas>
    <canvas id="bg-paper-canvas" class="theme-canvas" data-for-theme="paper"></canvas>
    <canvas id="bg-og-canvas" class="theme-canvas" data-for-theme="og"></canvas>

    <!-- LAYOUT: Default / Neural ‚Äî left aligned -->
    <div class="hero-layout hero-default max-w-6xl mx-auto w-full relative" style="z-index: 1;">
      <div class="reveal max-w-3xl">
        <p class="text-sm font-medium tracking-widest uppercase mb-6" style="color: var(--accent);">AI Systems Builder</p>
        <h1 class="hero-title font-bold tracking-tight leading-[0.95] mb-8" style="color: var(--text);">Jake<br/>Davis<span style="color: var(--accent);">.</span></h1>
        <p class="text-lg md:text-xl max-w-xl leading-relaxed mb-10" style="color: var(--text-2);">I build AI systems that actually do things. Neuroscience student at BYU, programmer at BrytWorks, and the kind of person who builds an AI assistant that works while he sleeps.</p>
        <div class="flex flex-wrap gap-4">
          <a href="/#work" class="hero-btn-primary inline-flex items-center gap-2 px-6 py-3 rounded-lg text-sm font-semibold transition-all hover:scale-105" style="background: var(--accent); color: var(--bg);">View Work <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg></a>
          <a href="/#contact" class="inline-flex items-center gap-2 px-6 py-3 rounded-lg text-sm font-semibold transition-all hover:scale-105" style="background: var(--surface); border: 1px solid var(--border); color: var(--text);">Get in Touch</a>
        </div>
      </div>
    </div>

    <!-- LAYOUT: Minimal ‚Äî centered, massive type -->
    <div class="hero-layout hero-minimal max-w-4xl mx-auto w-full relative text-center" style="z-index: 1;">
      <div class="reveal">
        <p class="text-sm tracking-widest uppercase mb-8" style="color: var(--text-3);">AI Systems Builder</p>
        <h1 class="hero-title tracking-tight leading-[0.9] mb-10" style="color: var(--text);">Jake Davis<span style="color: var(--accent);">.</span></h1>
        <p class="text-xl md:text-2xl max-w-2xl mx-auto leading-relaxed mb-12" style="color: var(--text-2);">Building AI systems that do real work ‚Äî from personal assistants to production data pipelines.</p>
        <div class="flex justify-center gap-6">
          <a href="/#work" class="text-sm font-medium underline underline-offset-4" style="color: var(--text);">View Work ‚Üì</a>
          <a href="/#contact" class="text-sm font-medium underline underline-offset-4" style="color: var(--text-3);">Contact</a>
        </div>
      </div>
    </div>

    <!-- LAYOUT: Terminal ‚Äî command prompt style -->
    <div class="hero-layout hero-terminal max-w-4xl mx-auto w-full relative" style="z-index: 1;">
      <div class="reveal" style="font-family: var(--font-mono);">
        <div class="mb-4 text-xs" style="color: var(--text-3);">jake@portfolio ~ $</div>
        <div class="mb-2"><span style="color: var(--text-3);">$ </span><span style="color: var(--accent);">whoami</span></div>
        <h1 class="hero-title tracking-tight leading-[0.95] mb-4" style="color: var(--text);">JAKE DAVIS</h1>
        <div class="mb-2"><span style="color: var(--text-3);">$ </span><span style="color: var(--accent);">cat about.txt</span></div>
        <p class="max-w-2xl leading-relaxed mb-6" style="color: var(--text-2);">AI systems builder. Neuroscience student @ BYU. The kind of person who builds an AI assistant that works while he sleeps.</p>
        <div class="mb-2"><span style="color: var(--text-3);">$ </span><span style="color: var(--accent);">ls projects/</span></div>
        <p class="mb-8" style="color: var(--text-2);">fuel/  yerb/  marketplace-scraper/  neural-nets/  vault-keeper/</p>
        <div><span style="color: var(--text-3);">$ </span><a href="/#work" style="color: var(--accent);">cd projects/<span class="cursor-blink"></span></a></div>
      </div>
    </div>

    <!-- LAYOUT: Glass ‚Äî centered with floating feel -->
    <div class="hero-layout hero-glass max-w-4xl mx-auto w-full relative text-center" style="z-index: 1;">
      <div class="reveal">
        <div class="inline-block px-4 py-1.5 rounded-full text-xs font-medium mb-8" style="background: var(--accent-bg); border: 1px solid rgba(167,139,250,0.2); color: var(--accent);">AI Systems Builder</div>
        <h1 class="hero-title tracking-tight leading-[0.95] mb-8" style="color: var(--text);">Jake<br/>Davis<span style="color: var(--accent);">.</span></h1>
        <p class="text-lg md:text-xl max-w-xl mx-auto leading-relaxed mb-10" style="color: var(--text-2);">Building intelligent systems at the intersection of neuroscience and AI.</p>
        <div class="flex justify-center gap-4">
          <a href="/#work" class="inline-flex items-center gap-2 px-8 py-3 rounded-2xl text-sm font-semibold transition-all hover:scale-105" style="background: var(--accent); color: #fff; box-shadow: 0 4px 20px rgba(167,139,250,0.3);">Explore Work</a>
          <a href="/#contact" class="inline-flex items-center gap-2 px-8 py-3 rounded-2xl text-sm font-semibold transition-all hover:scale-105" style="background: var(--surface); border: 1px solid var(--border); color: var(--text); backdrop-filter: blur(8px);">Say Hello</a>
        </div>
      </div>
    </div>

    <!-- LAYOUT: Brutalist ‚Äî massive, raw, asymmetric -->
    <div class="hero-layout hero-brutalist max-w-6xl mx-auto w-full relative" style="z-index: 1;">
      <div class="reveal">
        <h1 class="hero-title tracking-tighter leading-[0.85] mb-4" style="color: var(--text); text-transform: uppercase; font-weight: 900;">JAKE<br/>DAVIS<span style="color: var(--accent);">.</span></h1>
        <div class="flex items-start gap-8 mt-8">
          <div class="w-1 self-stretch" style="background: var(--accent);"></div>
          <div>
            <p class="text-lg max-w-lg leading-snug mb-6" style="color: var(--text-2);">AI systems builder. Neuroscience student. I make machines do useful things.</p>
            <a href="/#work" class="inline-block px-8 py-4 text-sm font-bold uppercase tracking-wider" style="background: var(--accent); color: #fff; border: 3px solid var(--text);">See Work ‚Üí</a>
          </div>
        </div>
      </div>
    </div>

    <!-- LAYOUT: Neon ‚Äî cyberpunk centered glow -->
    <div class="hero-layout hero-noir max-w-5xl mx-auto w-full relative text-center" style="z-index: 1;">
      <div class="reveal">
        <p class="text-xs font-bold uppercase tracking-[0.3em] mb-6" style="color: #00f0ff; text-shadow: 0 0 10px rgba(0,240,255,0.5);">AI Systems Builder</p>
        <h1 class="hero-title tracking-tight leading-[0.9] mb-6" style="font-weight: 900; text-transform: uppercase; background: linear-gradient(180deg, #ff2d95 0%, #00f0ff 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; filter: drop-shadow(0 0 30px rgba(255,45,149,0.3));">Jake<br/>Davis<span style="-webkit-text-fill-color: #ff2d95;">.</span></h1>
        <p class="text-lg md:text-xl max-w-xl mx-auto leading-relaxed mb-10" style="color: var(--text-2);">Neuroscience student building AI that works while I sleep.</p>
        <div class="flex justify-center gap-4">
          <a href="/#work" class="inline-flex items-center gap-2 px-8 py-3 text-sm font-bold uppercase tracking-wider transition-all hover:scale-105" style="background: linear-gradient(135deg, #ff2d95, #cc2277); color: #fff; box-shadow: 0 0 20px rgba(255,45,149,0.3); border-radius: 4px;">View Work</a>
          <a href="/#contact" class="inline-flex items-center gap-2 px-8 py-3 text-sm font-bold uppercase tracking-wider transition-all hover:scale-105" style="border: 1px solid rgba(0,240,255,0.3); color: #00f0ff; border-radius: 4px; text-shadow: 0 0 8px rgba(0,240,255,0.3);">Contact</a>
        </div>
      </div>
    </div>

    <!-- LAYOUT: OG ‚Äî file-system explorer, the original -->
    <div class="hero-layout hero-og w-full relative flex items-center" style="z-index: 1; min-height: 100vh;">
      <div class="og-filesystem">
        <div class="og-path"><a href="/#work">/home/jake/projects</a></div>
        <div class="og-path"><a href="/#about">/home/jake/about.txt</a></div>
        <div class="og-path"><a href="/#contact">/home/jake/contact</a></div>
        <div class="og-path"><a href="/photos">/home/jake/photos</a></div>
        <div class="og-path"><a href="https://github.com/quakeob" target="_blank">/home/jake/.git</a></div>
        <div class="og-path"><a href="https://x.com/Jak3dev" target="_blank">/var/log/thoughts</a></div>
      </div>
    </div>

    <!-- LAYOUT: Paper ‚Äî newspaper masthead -->
    <div class="hero-layout hero-retro max-w-4xl mx-auto w-full relative text-center flex flex-col items-center justify-center" style="z-index: 1;">
      <div class="reveal">
        <div class="w-full h-px mb-8" style="background: #1a1a1a;"></div>
        <p class="text-xs uppercase tracking-[0.4em] mb-4" style="color: var(--text-3); font-family: Georgia, serif;">The Portfolio of</p>
        <h1 class="hero-title tracking-tight leading-[1] mb-4" style="color: var(--text); text-transform: uppercase; font-weight: 700; font-family: Georgia, serif; letter-spacing: -0.02em;">Jake Davis</h1>
        <div class="w-32 mx-auto mb-4" style="border-top: 1px solid #1a1a1a; border-bottom: 1px solid #1a1a1a; padding: 2px 0;">
          <div class="w-full" style="border-top: 1px solid #1a1a1a;"></div>
        </div>
        <p class="text-sm tracking-[0.15em] mb-3" style="color: var(--text-2); font-family: Georgia, serif;">AI Systems Builder&ensp;¬∑&ensp;Neuroscience&ensp;¬∑&ensp;BYU</p>
        <p class="text-xs italic mb-8" style="color: var(--text-3); font-family: Georgia, serif;">Est. 2026</p>
        <div class="w-full h-px mb-8" style="background: #1a1a1a;"></div>
        <a href="/#work" class="text-sm tracking-[0.1em] pb-1 transition-colors" style="color: var(--accent); font-family: Georgia, serif; text-decoration: underline; text-underline-offset: 4px;">Read More ‚Üì</a>
      </div>
    </div>
  </section>

  <!-- WORK -->
  <section id="work" class="py-24 px-6">
    <div class="max-w-6xl mx-auto">
      <div class="reveal mb-16">
        <p class="text-sm font-medium tracking-widest uppercase mb-3" style="color: var(--accent);">Selected Work</p>
        <h2 class="text-3xl md:text-4xl font-bold tracking-tight" style="color: var(--text);">Things I've built<span style="color: var(--accent);">.</span></h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
        {projects.map((project, i) => (
          <a href={project.link}
            class="card p-6 md:p-8 reveal group cursor-pointer block"
            style={`animation-delay: ${i * 0.1}s`}>
            <div class="flex items-start justify-between mb-4">
              <span class="text-2xl">{project.emoji}</span>
              <div class="flex items-center gap-2">
                {project.github && (
                  <a href={project.github} target="_blank" class="opacity-50 hover:opacity-100 transition-opacity" onclick="event.stopPropagation();">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" style="color: var(--text-3);"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
                  </a>
                )}
                <span class="text-xs font-medium px-2 py-1 rounded-full" style={`background: var(--accent-bg); color: var(--accent);`}>
                  {project.status}
                </span>
              </div>
            </div>
            <h3 class="text-xl font-bold mb-2 group-hover:translate-x-1 transition-transform" style="color: var(--text);">
              {project.title}
              <svg class="inline-block w-4 h-4 ml-1 opacity-0 group-hover:opacity-100 transition-opacity" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M7 17L17 7M17 7H7M17 7v10"/></svg>
            </h3>
            <p class="text-sm leading-relaxed mb-4" style="color: var(--text-2);">{project.desc}</p>
            <div class="flex flex-wrap gap-2">
              {project.tags.map(tag => (
                <span class="text-xs px-2 py-1 rounded-md" style="background: var(--bg-3); color: var(--text-3);">{tag}</span>
              ))}
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- ABOUT -->
  <section id="about" class="py-24 px-6" style="background: var(--bg-2);">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-start">
        <div class="reveal">
          <p class="text-sm font-medium tracking-widest uppercase mb-3" style="color: var(--accent);">About</p>
          <h2 class="text-3xl md:text-4xl font-bold tracking-tight mb-6" style="color: var(--text);">
            Building at the intersection of AI and everything else<span style="color: var(--accent);">.</span>
          </h2>
          <div class="space-y-4 text-base leading-relaxed" style="color: var(--text-2);">
            <p>I'm a neuroscience student at BYU who spends more time building AI systems than studying for exams. I work as a programmer at BrytWorks, where I build automation tools and web applications.</p>
            <p>My AI assistant, Yerb, runs 24/7 on a Mac Mini ‚Äî managing my schedule, automating coursework, scraping deals on vehicles, and building projects while I sleep. It's not a demo. It's my actual workflow.</p>
            <p>I think the most interesting problems sit at the edge of neuroscience and AI ‚Äî how brains actually work versus how we simulate intelligence. When I'm not coding, I'm skiing, wrenching on my 4Runner, or 3D printing something functional.</p>
          </div>
        </div>
        <div class="reveal">
          <div class="space-y-6">
            {skills.map(group => (
              <div>
                <h4 class="text-xs font-semibold tracking-widest uppercase mb-3" style="color: var(--text-3);">{group.category}</h4>
                <div class="flex flex-wrap gap-2">
                  {group.items.map(skill => (
                    <span class="text-sm px-3 py-1.5 rounded-lg" style="background: var(--surface); border: 1px solid var(--border); color: var(--text-2);">
                      {skill}
                    </span>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CONTACT -->
  <section id="contact" class="py-24 px-6">
    <div class="max-w-6xl mx-auto text-center">
      <div class="reveal max-w-2xl mx-auto">
        <p class="text-sm font-medium tracking-widest uppercase mb-3" style="color: var(--accent);">Contact</p>
        <h2 class="text-3xl md:text-5xl font-bold tracking-tight mb-6" style="color: var(--text);">
          Let's build something<span style="color: var(--accent);">.</span>
        </h2>
        <p class="text-lg mb-10" style="color: var(--text-2);">
          Always interested in new projects, collaborations, or just talking about AI and neuroscience.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="mailto:jake@bryt.works" class="inline-flex items-center gap-2 px-6 py-3 rounded-lg text-sm font-semibold transition-all hover:scale-105" style="background: var(--accent); color: var(--bg);">
            jake@bryt.works
          </a>
          <a href="https://github.com/quakeob" target="_blank" class="card inline-flex items-center gap-2 px-6 py-3 text-sm font-semibold" style="color: var(--text);">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
            GitHub
          </a>
          <a href="https://x.com/Jak3dev" target="_blank" class="card inline-flex items-center gap-2 px-6 py-3 text-sm font-semibold" style="color: var(--text);">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
            @Jak3dev
          </a>
        </div>
      </div>
    </div>
  </section>
  <script is:inline src="/neural.js"></script>
  <script is:inline src="/bg-minimal.js"></script>
  <script is:inline src="/bg-terminal.js"></script>
  <script is:inline src="/bg-glass.js"></script>
  <script is:inline src="/bg-brutalist.js"></script>
  <script is:inline src="/bg-neon.js"></script>
  <script is:inline src="/bg-paper.js"></script>
  <script is:inline src="/bg-og.js"></script>

  <style is:global>
    /* Canvas and layout visibility per theme */
    .theme-canvas {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 0;
      display: none;
    }
    /* Default theme shows neural canvas */
    :root:not([data-theme]) .theme-canvas[data-for-theme="default"],
    [data-theme="default"] .theme-canvas[data-for-theme="default"] { display: block; }
    [data-theme="minimal"] .theme-canvas[data-for-theme="minimal"] { display: block; }
    [data-theme="terminal"] .theme-canvas[data-for-theme="terminal"] { display: block; }
    [data-theme="glass"] .theme-canvas[data-for-theme="glass"] { display: block; }
    [data-theme="brutalist"] .theme-canvas[data-for-theme="brutalist"] { display: block; }
    [data-theme="noir"] .theme-canvas[data-for-theme="neon"] { display: block; }
