<div class="now-playing" id="now-playing">
  <div class="np-album"></div>
  <div class="np-info">
    <div class="np-label">
      <span class="np-icon">â™ª</span> Now Playing
      <div class="np-eq">
        <span class="eq-bar"></span>
        <span class="eq-bar"></span>
        <span class="eq-bar"></span>
        <span class="eq-bar"></span>
      </div>
    </div>
    <div class="np-track-wrap">
      <div class="np-track" id="np-track">Blinding Lights</div>
      <div class="np-artist" id="np-artist">The Weeknd</div>
    </div>
  </div>
</div>

<style>
  .now-playing {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 6px 10px 6px 6px;
    border-radius: 10px;
    background: var(--surface);
    border: 1px solid var(--border);
    max-width: 260px;
    overflow: hidden;
  }
  .np-album {
    width: 36px;
    height: 36px;
    border-radius: 6px;
    flex-shrink: 0;
    background: linear-gradient(135deg, var(--accent), color-mix(in srgb, var(--accent) 50%, var(--bg)));
  }
  .np-info {
    min-width: 0;
    flex: 1;
  }
  .np-label {
    display: flex;
    align-items: center;
    gap: 4px;
    font-size: 10px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--accent);
    line-height: 1;
    margin-bottom: 2px;
  }
  .np-icon {
    font-size: 11px;
  }
  .np-eq {
    display: flex;
    align-items: flex-end;
    gap: 2px;
    height: 10px;
    margin-left: auto;
  }
  .eq-bar {
    width: 2px;
    background: var(--accent);
    border-radius: 1px;
    animation: eq-bounce 0.8s ease-in-out infinite alternate;
  }
  .eq-bar:nth-child(1) { height: 4px; animation-duration: 0.6s; }
  .eq-bar:nth-child(2) { height: 8px; animation-duration: 0.8s; animation-delay: 0.1s; }
  .eq-bar:nth-child(3) { height: 5px; animation-duration: 0.7s; animation-delay: 0.2s; }
  .eq-bar:nth-child(4) { height: 7px; animation-duration: 0.9s; animation-delay: 0.05s; }
  @keyframes eq-bounce {
    0% { height: 2px; }
    100% { height: 10px; }
  }
  .np-track-wrap {
    position: relative;
    overflow: hidden;
  }
  .np-track {
    font-size: 12px;
    font-weight: 600;
    color: var(--text);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    transition: opacity 0.4s;
  }
  .np-artist {
    font-size: 11px;
    color: var(--text-3);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    transition: opacity 0.4s;
  }
  .np-track.fade, .np-artist.fade {
    opacity: 0;
  }
</style>

<script is:inline>
(function() {
  const songs = [
    { track: 'Blinding Lights', artist: 'The Weeknd' },
    { track: 'N95', artist: 'Kendrick Lamar' },
    { track: 'Resonance', artist: 'HOME' },
    { track: 'Midnight City', artist: 'M83' },
    { track: 'Breathe', artist: 'Pink Floyd' },
  ];
  let idx = 0;
  const trackEl = document.getElementById('np-track');
  const artistEl = document.getElementById('np-artist');
  if (!trackEl || !artistEl) return;
  setInterval(() => {
    idx = (idx + 1) % songs.length;
    trackEl.classList.add('fade');
    artistEl.classList.add('fade');
    setTimeout(() => {
      trackEl.textContent = songs[idx].track;
      artistEl.textContent = songs[idx].artist;
      trackEl.classList.remove('fade');
      artistEl.classList.remove('fade');
    }, 400);
  }, 30000);
})();
</script>
